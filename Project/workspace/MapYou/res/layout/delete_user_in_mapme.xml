<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <GridView
            android:id="@+id/gridViewMapMeDeleteUsers"
            android:layout_width="match_parent"
            android:layout_height="327dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:numColumns="auto_fit" >
        </GridView>

        <LinearLayout
            android:id="@+id/fsda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/buttonConfirmDeleteUser"
                android:layout_width="238dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="0.37"
                android:background="@drawable/mybuttongreen"
                android:gravity="center"
                android:onClick="confirmDelete"
                android:text="Done" />

            <Button
                android:id="@+id/buttonCancelDeleteUser"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="0.23"
                android:background="@drawable/button"
                android:onClick="cancelDelete"
                android:text="Cancel" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
