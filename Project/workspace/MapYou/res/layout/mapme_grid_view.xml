<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/AliceBlue"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/llll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageView
                android:id="@+id/imageViewMapMeOnGridView"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_weight="0.15"
                android:src="@drawable/comm" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewNameMapMeOnGridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:id="@+id/orimap"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:src="@drawable/start" />

            <TextView
                android:id="@+id/TextViewStartMapme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/orimap2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:src="@drawable/end" />

            <TextView
                android:id="@+id/TextViewEndMapMe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
